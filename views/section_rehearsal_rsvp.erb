<!-- Visitors -->

<section id="registry-page" class="row" data-magellan-destination='registry'>

  <div class="page-wrapper">

    <div class="page">

      <h2 class="align-center">
        Rehearsal Dinner RSVP
      </h2>
      <br />
      <img alt="divider" class="page-divider" src="images/divider2.png" />
      <br />

      <div class='rehearsal-sending rehearsal-response' style='display:none;'>
        <h3>RSVPing...</h3>
      </div>

      <div class='rehearsal-success rehearsal-response' style='display:none;'>
        <h3>Thanks! See you then!</h3>
      </div>

      <div class='rehearsal-error rehearsal-response' style='display:none;'>
        <h3>Hmm... something went wrong...</h3>
        <p>Just send an email to zdicklin@gmail.com</p>
      </div>

      <form class='rehearsal-form'>
        <ul>
          <li>
            <input type="text" name="names" placeholder="Name(s)" />
          </li>
          <li>
            <input type="radio" name="attending" value="true">I'll be there!<br>
          </li>
          <li>
            <input type="radio" name="attending" value="false">Sorry, can't make it.
          </li>
          <li>
            <input type="submit" value="RSVP" class="rsvp-button"/>
          </li>
        </ul>
      </form>


    </div>

  </div>

</section>
